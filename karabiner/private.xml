<?xml version="1.0"?>
<root>
	<item>
		<name>Swap cmd and option keys on external keyboard</name>
		<identifier>private.external.remapoptionkeys</identifier>
    <autogen>__KeyToKey__ KeyCode::COMMAND_L, KeyCode::OPTION_L</autogen>
    <autogen>__KeyToKey__ KeyCode::OPTION_L, KeyCode::COMMAND_L</autogen>
		<autogen>__KeyToKey__ KeyCode::OPTION_R, KeyCode::COMMAND_R</autogen>
		<autogen>__KeyToKey__ KeyCode::PC_APPLICATION, KeyCode::OPTION_R</autogen>
	</item>
	<item>
		<name>Replace clear by num lock toggle</name>
		<identifier>private.external.replaceclearwithnumlock</identifier>
		<autogen>__KeyToKey__ KeyCode::KEYPAD_CLEAR, KeyCode::VK_IOHIKEYBOARD_TOGGLE_NUMLOCK</autogen>
	</item>
	<item>
		<name>Make numpad operators functional again</name>
			<identifier>private.external.functionalnumpadoperators</identifier>
			<autogen>__KeyToKey__ KeyCode::PC_PRINTSCREEN, KeyCode::KEYPAD_SLASH</autogen>
			<autogen>__KeyToKey__ KeyCode::PC_SCROLLLOCK, KeyCode::KEYPAD_MULTIPLY</autogen>
			<autogen>__KeyToKey__ KeyCode::PC_PAUSE, KeyCode::KEYPAD_MINUS</autogen>
		</name>
</root>
